{
  "compilerOptions": {
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "outDir": "bin",
    "pretty": false,
    "sourceMap": false,
    "strictNullChecks": true,
    "target": "es2017"
  },
  "exclude": [
    "node_modules",
    "typings"
  ],
  "include": [
    "src/**/*.ts"
  ]
}
